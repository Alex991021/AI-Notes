<launch>
    <include file = "$(find lidar_camera_fusion)/launch/lidar_left_camera_fusion.launch" /> 

    <!-- octomap_server can downsize 2D nav_msgs -->
    <include file = "$(find octomap_server)/launch/octomap_server_start.launch" />

    <!-- 运行 move_base 节点 -->
    <include file="$(find agilex_navigation)/launch/agilex_mini_move_base.launch"/>

    <!-- map to odom -->
    <node pkg = "tf2_ros" type = "static_transform_publisher" name = "mini_nav_odom_static_broadcaster" args = "0 0 0 0 0 0 map odom" />

    <!-- 运行 rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find agilex_navigation)/rviz/agilex_mini_nav_with_odom.rviz"/>

</launch>
