<launch>

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
        <rosparam file="$(find agilex_navigation)/config/book_config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find agilex_navigation)/config/book_config/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <rosparam file="$(find agilex_navigation)/config/book_config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find agilex_navigation)/config/book_config/local_costmap_params.yaml" command="load" />
         
        <rosparam file="$(find agilex_navigation)/config/book_config/base_local_planner_params.yaml" command="load" />
    </node>

</launch>